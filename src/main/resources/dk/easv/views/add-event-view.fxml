<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import io.github.palexdev.materialfx.controls.MFXDatePicker?>
<MFXScrollPane fitToHeight="true" fitToWidth="true" styleClass="Main-Anchorpane" stylesheets="@../css/CreateEventStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.gui.controllers.AddEventViewController">
   <content>
      <AnchorPane>
         <children>
            <VBox alignment="CENTER" prefWidth="900.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <MFXTextField fx:id="eventNameField" floatMode="BORDER" promptText="Event name" styleClass="inputTextField" />
                  <MFXTextField fx:id="eventExtraNotesField" alignment="TOP_LEFT" floatMode="BORDER" promptText="Description" styleClass="inputTextField" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <MFXDatePicker fx:id="startDatePicker" promptText="Start date" />
                        <MFXDatePicker fx:id="endDatePicker" promptText="End date" />
                     </children>
                  </HBox>
                  <MFXTextField fx:id="eventLocationField" floatMode="BORDER" promptText="Event location" styleClass="inputTextField" />
                  <MFXTextField fx:id="eventDirectionsField" floatMode="BORDER" promptText="How to get there?" styleClass="inputTextField" />
                  <VBox fx:id="ticketTypesVBox" spacing="20">
            </VBox>
                  <MFXButton onAction="#addTicketAction" text="Add ticket type" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="900.0">
                     <children>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0">
                          <buttons>
                              <MFXButton fx:id="submitButton" defaultButton="true" text="Submit" />
                              <MFXButton fx:id="cancelButton" cancelButton="true" text="Cancel" />
                          </buttons>
                        </ButtonBar>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</MFXScrollPane>
